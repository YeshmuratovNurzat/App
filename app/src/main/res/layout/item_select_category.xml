<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/image_select_category"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_margin="6dp"
        app:srcCompat="@drawable/ic_phones"
        android:padding="20dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        app:roundPercent="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_select_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mark_pro"
        android:text="Phones"
        android:textSize="12sp"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toEndOf="@+id/image_select_category"
        app:layout_constraintStart_toStartOf="@+id/image_select_category"
        app:layout_constraintTop_toBottomOf="@+id/image_select_category" />

</androidx.constraintlayout.widget.ConstraintLayout>