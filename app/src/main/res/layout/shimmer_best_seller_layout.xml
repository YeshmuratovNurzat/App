<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="260dp"
    android:layout_margin="5dp"
    android:elevation="15dp"
    app:cardCornerRadius="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/best_seller_image"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/button_add_favorite"
            android:layout_width="38dp"
            android:layout_height="38dp"
            app:roundPercent="1"
            android:elevation="30dp"
            android:backgroundTint="@color/grey"
            android:background="@color/white"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/best_seller_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/best_seller_money"
            android:fontFamily="@font/mark_pro"
            android:textColor="@color/grey"
            android:background="@color/grey"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/best_seller_image"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/best_seller_old_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/best_seller_old_money"
            android:fontFamily="@font/mark_pro"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:background="@color/grey"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/best_seller_money"
            app:layout_constraintTop_toTopOf="@+id/best_seller_money"
            app:layout_constraintBottom_toBottomOf="@+id/best_seller_money"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/best_seller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/best_seller_name"
            android:fontFamily="@font/mark_pro"
            android:background="@color/grey"
            android:textColor="@color/grey"
            android:textSize="11sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:ems="10"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/best_seller_money"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>